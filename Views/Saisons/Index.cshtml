@model IEnumerable<Cuillere.Models.Saison>

@{
    ViewBag.Title = "Saison";
}

<h2>Recettes par saison</h2>

<p>
    @Html.ActionLink("Ajouter une saison", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SaisonId }) |
            @Html.ActionLink("Details", "Details", new { id=item.SaisonId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SaisonId })
        </td>
    </tr>
}

</table>
