@model Cuillere.Models.RecetteDetail

@{
    ViewBag.Title = "Delete";
}

<h2>@Html.DisplayFor(model => model.Recette.Name)</h2>
<h4>@Html.DisplayFor(model => model.Recette.Category.Name) | @Html.DisplayFor(model => model.Recette.Saison.Name)</h4>

<div>
    <h3>Êtes-vous sûr de vouloir supprimer cet ingrédient de la recette?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ingredient.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ingredient.Name)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.unite)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.unite)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retour", "Index", "Recettes")
        </div>
    }
</div>
